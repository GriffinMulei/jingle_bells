import time

def print_colored_line(line, color_code):
    return "\033[{}m{}\033[0m".format(color_code, line.center(40))

def print_decorated_line(line, color_code):
    decorated_line = "*" * 40 + "\n" + print_colored_line(line, color_code) + "\n" + "*" * 40
    print(decorated_line)

def jingle_bells():
    print_decorated_line("Jingle bells, code spells", 91)  # Red text
    print_colored_line("Coding all the way", 92)         # Green text
    print_colored_line("Oh, what fun it is to debug", 93) # Yellow text
    print_colored_line("In a one-line open sleigh, hey!", 94) # Blue text

def chorus():
    print_decorated_line("Jingle bells, code spells", 91)
    print_colored_line("Coding all the way", 92)
    print_colored_line("Oh, what fun it is to debug", 93)
    print_colored_line("In a one-line open sleigh, hey!", 94)

def dashing_through_the_code():
    print_decorated_line("Dashing through the code", 91)
    print_colored_line("In a one-line open sleigh", 92)
    print_colored_line("O'er the bugs we go", 93)
    print_colored_line("Laughing all the way, hey!", 94)

def oh_what_fun():
    print_decorated_line("Oh, what fun it is to code", 91)
    print_colored_line("In a one-line open sleigh, hey!", 92)

def chorus_repeat():
    print_decorated_line("Jingle bells, code spells", 91)
    print_colored_line("Coding all the way", 92)
    print_colored_line("Oh, what fun it is to debug", 93)
    print_colored_line("In a one-line open sleigh, hey!", 94)

def entire_song():
    jingle_bells()
    print()
    dashing_through_the_code()
    print()
    oh_what_fun()
    print()
    chorus_repeat()

def tech_marvel_automation():
    print("Activating Tech Marvel Automation...")
    time.sleep(1)
    print("Scanning for bugs...")
    time.sleep(1)
    print("Optimizing code performance...")
    time.sleep(1)
    print("Deploying tech spells...")
    time.sleep(1)
    print("Tech marvel automation complete!")

if __name__ == "__main__":
    entire_song()
    print()
    tech_marvel_automation()

